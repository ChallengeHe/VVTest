<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_width="300dp"
    android:background="@drawable/bg_wheel_picker_border">

    <TextView
        android:id="@+id/wheel_picker_width_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="标签文本"
        android:gravity="center"
        android:text="Width："
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wheel_picker_width_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="值"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/wheel_picker_width_lable"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/wheel_picker_width_lable">

        <com.vv3d.vvtest.widget.NumberWheelView
            android:id="@+id/wheel_picker_width_hundreds"
            style="@style/WheelDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:contentDescription="百位" />

        <com.vv3d.vvtest.widget.NumberWheelView
            android:id="@+id/wheel_picker_width_tens"
            style="@style/WheelDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:contentDescription="十位" />

        <com.vv3d.vvtest.widget.NumberWheelView
            android:id="@+id/wheel_picker_width_ones"
            style="@style/WheelDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:contentDescription="个位" />

        <TextView
            android:id="@+id/wheel_picker_width_point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:contentDescription="小数点"
            android:gravity="center_horizontal|bottom"
            android:text="."
            android:textColor="@color/black" />

        <com.vv3d.vvtest.widget.NumberWheelView
            android:id="@+id/wheel_picker_width_point_one"
            style="@style/WheelDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:contentDescription="小数点后第1位" />

        <com.vv3d.vvtest.widget.NumberWheelView
            android:id="@+id/wheel_picker_width_point_two"
            style="@style/WheelDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:contentDescription="小数点后第2位" />

        <com.vv3d.vvtest.widget.NumberWheelView
            android:id="@+id/wheel_picker_width_point_three"
            style="@style/WheelDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:contentDescription="小数点后第3位" />

        <com.vv3d.vvtest.widget.NumberWheelView
            android:id="@+id/wheel_picker_width_point_four"
            style="@style/WheelDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:contentDescription="小数点后第4位" />

        <com.vv3d.vvtest.widget.NumberWheelView
            android:id="@+id/wheel_picker_width_point_five"
            style="@style/WheelDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:contentDescription="小数点后第5位" />

        <com.vv3d.vvtest.widget.NumberWheelView
            android:id="@+id/wheel_picker_width_point_six"
            style="@style/WheelDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:contentDescription="小数点后第6位" />

        <com.vv3d.vvtest.widget.NumberWheelView
            android:id="@+id/wheel_picker_width_point_seven"
            style="@style/WheelDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:contentDescription="小数点后第7位" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
